<h1>Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><a href=<%= "/tasks/#{task[:id]}" %>><%= task.name %></a><form action="/tasks/<%= task.id %>" method="post">
    <input name="_method" type="hidden" value="patch">
    <input name="task[done]" type="hidden" value="true">
    <button>Mark done</button>
    </form></li>
  <% end %>
</ul>

<p><a href="/tasks/new">Create a new task</a></p>
